{
  "compilerOptions": {
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "debug",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
